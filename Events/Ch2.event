BeginningScene:
	MUSC LonelyTownSoulBlazerSong
	SetBackground(Castle_Hall_2)
	Text(Ch2OP)
	MUSC ToccataAndDoomSong
	SetBackground(Plain_2)
	Text(Ch2OP2)
	SetBackground(Castle_Hall_2)
	Text(Ch2OP3)
