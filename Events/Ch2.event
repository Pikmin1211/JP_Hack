PostPrep:
	MUSC RedialSong
	CAM1 [10,5]
	FlashCursor(10,5,60)
	Text(Ch2PostPrep1)
	CAM1 Batta
	FlashCursor(Batta,60)
	CAM1 ONeill
	FlashCursor(ONeill,60)
	Text(Ch2PostPrep2)
	CAM1 Sanders
	NoFade
	ENDA

Reinforcements1:
	CHECK_ALIVE Batta
	BEQ 1 0x0 0xC
		SpawnReinforcements(LeftReinforcementUnits)
		LABEL 1
	CHECK_ALIVE ONeill
	BEQ 2 0x0 0xC
		SpawnReinforcements(RightReinforcementUnits)
		LABEL 2
	NoFade
	ENDA

WrysAppears:
	MUSS SkyEventSong
	SpawnReinforcements(WrysUnit)
	FlashCursor(Wrys,60)
	Text(Ch2Wrys)
	MURE 2
	NoFade
	ENDA
	NoFade
	ENDA

