EndingScene:
	MUSC UndergroundLairSong
	SetBackground(Castle_Hall_2)
	Text(Ch2Ending)
	CHECK_EVENTID 0x9
	BEQ 1 0xC 0x0
		SetBackground(Plain_2)
		MUSC 0x4C // birds
		Text(Ch2ItemGet)
		GiveItem(AngelicRobe,Sanders)
		LABEL 1
	CHECK_EVENTID 0xA
	BEQ 2 0xC 0x0
		CHECK_EVENTID 0x9
		BNE 3 0xC 0x0 // make sure to not repeat the dialog
			SetBackground(Plain_2)
			MUSC 0x4C // birds
			Text(Ch2ItemGet)
			LABEL 3
		GiveItem(BrightLance,Sanders)
		LABEL 2
	MNC2 3
	NoFade
	ENDA
